<Page x:Class="XamlBrewer.Uwp.SplitViewNavigation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:XamlBrewer.Uwp.SplitViewNavigation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="Transparent">
        <TextBlock Text="Welcome to the Barn"
                   Foreground="{StaticResource PageForegroundBrush}"
                   Margin="50,50,50,50"
                   FontSize="48"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left" />
        <Path Data="{StaticResource HomeIcon}"
              Fill="{StaticResource PageForegroundBrush}"
              VerticalAlignment="Top"
              HorizontalAlignment="Right"
              Height="96"
              Width="96"
              Margin="50"
              Stretch="Uniform" />
    </Grid>
</Page>
